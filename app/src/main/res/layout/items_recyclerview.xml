<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/tvIdProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:hint="Id"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tvIdProduct"
        android:hint="Nombre"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tvProductName"
        android:layout_weight="20"
        android:gravity="center"
        android:hint="Valor"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_less"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPrice"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="-"/>

    <TextView
        android:id="@+id/tvcant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignBaseline="@+id/btn_less"
        android:layout_toRightOf="@+id/btn_less"
        android:layout_below="@+id/tvPrice"
        android:text="0"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_more"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPrice"
        android:layout_toRightOf="@+id/tvcant"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="+"/>

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/tvPrice"
        android:layout_toRightOf="@+id/btn_more"
        android:layout_alignBaseline="@+id/btn_less"
        android:text="0"
        android:textSize="16dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/listDivider"
        />

</RelativeLayout>